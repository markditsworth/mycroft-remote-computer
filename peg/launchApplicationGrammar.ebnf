@@grammar::LaunchApplicationGrammar

start = expr $ ;

expr
    = launch:launchCode app:application prep:[ preposition ] workspaceWord:[ workspace ] workingDirectory:[ { word }+ ] $ ;

workspace
    =
    | 'workspace'
    | [ 'working' ] 'directory'
    | 'project' [ ( 'name' | 'title' | 'index' ) ]
    ;

preposition
    =
    | 'in'
    | 'at'
    | 'with'
    | 'on'
    | 'within'
    | 'inside'
    | 'for'
    ;
    
launchCode
    =
    | 'open'
    | 'launch'
    ;

application
    =
    | 'code' 'composer' [ 'studio' ]
    | 'spider'
    | 'jupiter'
    | word
    ;
    
word = /[a-z]+/ ;